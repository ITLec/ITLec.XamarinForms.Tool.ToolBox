<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ITLec.XamarinForms.Tool.AdvancedProgressBar.AdvancedProgressBar">


    <StackLayout Orientation="Vertical">


        <ProgressBar x:Name="mainProgressBar" Progress="0.0"
                                          WidthRequest="300"
                 HeightRequest="20" 
                 VerticalOptions="Center"
                 HorizontalOptions="Center">

        </ProgressBar>

        <Label Text="%0" x:Name="lbl"
           VerticalOptions="Center" 
           HorizontalOptions="Center" />

    </StackLayout>

</ContentView>
